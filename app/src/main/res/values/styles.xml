<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- LinearLayout style -->
    <style name="LinearLayoutBankStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutQuestionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Question header style -->
    <style name="QuestionHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <!-- Question sub header style -->
    <style name="QuestionSubHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/sub_header_text_size</item>
        <item name="android:layout_marginTop">@dimen/sub_header_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/sub_header_vertical_margin</item>
    </style>

    <!-- EditText style -->
    <style name="EditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">@string/edit_text_hint</item>
        <item name="android:inputType">textNoSuggestions|text</item>
    </style>

    <!-- RadioGroup style -->
    <style name="RadioGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- RadioButton style -->
    <style name="RadioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- CheckBox style -->
    <style name="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Answer Button style -->
    <style name="AnswerButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/button_text_submit_answers</item>
        <item name="android:layout_marginTop">@dimen/submit_answers_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/submit_answers_vertical_margin</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
